<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Semi-transparent background -->
    <item>
        <shape>
            <solid android:color="#90000000" /> <!-- Semi-transparent white background -->
            <corners android:radius="2dp"/> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Orange border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Make the inner area transparent -->
            <stroke
                android:width="1dp"
                android:color="#FFFFA500" /> <!-- Orange border -->
            <corners android:radius="4dp"/> <!-- Ensure corners match for rounded effect -->
        </shape>
    </item>
</layer-list>
