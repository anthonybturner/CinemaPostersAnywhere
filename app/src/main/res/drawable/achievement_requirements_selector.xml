<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the view is focused (Fire TV remote) -->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="2dp"/> <!-- Change the radius as needed -->
            <solid android:color="#80000000" /> <!-- Light color when focused -->
            <stroke android:width="1dp" android:color="#FFFFA500" /> <!-- Optional border -->
        </shape>
    </item>

    <!-- Default state when not focused -->
    <item>
        <shape>
            <corners android:radius="2dp"/> <!-- Rounded corners for default state -->
        </shape>
    </item>
</selector>