<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/tiled_cinema"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:padding="12dp"
        android:background="@color/semi_transparent_black"
        />

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/semi_transparent_black"
        >
        <EditText
            android:id="@+id/steamNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:text="@string/enter_steam_user_name"
            android:hint="@string/enter_steam_user_name"
            android:textColor="@color/white"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/steamId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steam_id_will_appear_here"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/semi_transparent_black"
        >
        <EditText
            android:id="@+id/kodiIpAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_ip_address"
            android:hint="@string/enter_ip_address"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/kodiPortAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_port"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:padding="12dp"
        android:background="@color/semi_transparent_black"

        />
</LinearLayout>
