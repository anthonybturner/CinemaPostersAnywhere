<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:gravity="center">

    <!-- ImageView spanning entire height -->
    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/movie_poster_image_container"
        android:scaleType="center"
        android:src="@drawable/cinema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ProgressBar for loading state -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="256dp"
    android:layout_height="256dp"
    android:indeterminate="false"
    android:progressDrawable="@drawable/circular_progress_bar"
    android:visibility="gone"
    android:max="100"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


    <!-- TextView to show the download progress (percentage and file count) -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_percentage"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:textAlignment="center"
        android:background="@color/semi_transparent_black"
        />
    <!-- Top Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:padding="12dp"
        android:background="@color/semi_transparent_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- "In Theaters" TextView with weight -->
        <TextView
            android:id="@+id/movie_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/In_theaters"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_title"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Side Button Menu -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/semi_transparent_black">

        <!-- Buttons for different categories -->
        <Button
            android:id="@+id/button_all"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/all_movies"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_top_rated"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/top_movies"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_popular"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/popular" />

        <Button
            android:id="@+id/button_trending"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/trending" />
    </LinearLayout>

    <!-- Bottom TextView for movie overview -->
    <TextView
        android:id="@+id/movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_transparent_black"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:text="@string/movie_overview"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
