<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Left Pane: Side Button Menu -->
    <LinearLayout
        android:id="@+id/side_button_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/border_background"
        android:padding="12dp"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <!-- Buttons for different categories -->
    <Button
        android:id="@+id/button_all"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="@string/all_movies"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    <Button
        android:id="@+id/button_top_rated"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="@string/top_movies"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    <Button
        android:id="@+id/button_popular"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="@string/popular"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    <Button
        android:id="@+id/button_trending"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="@string/trending"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
    </LinearLayout>
    <!-- Right Pane -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/side_button_menu"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Movie Poster Image -->
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/movie_poster_image_container"
            android:src="@drawable/cinema"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- ProgressBar for Loading State -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            android:max="100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TextView to Show Progress -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_percentage"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textAlignment="center"
            android:background="@color/semi_transparent_black"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Top Menu with Movie Category and Title -->
        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/semi_transparent_black"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- Movie Category -->
            <TextView
                android:id="@+id/movie_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/now_playing"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textAlignment="center"
                android:textStyle="bold" />
            <!-- Movie Title -->
            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/movie_title"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />
            <!-- Extra Movie Info -->
            <LinearLayout
                android:id="@+id/movie_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#00000000"
                app:layout_constraintTop_toBottomOf="@id/top_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <!-- Ratings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rated"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/white"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/movie_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adult_status"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />
                <!-- Studio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/studio"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/movie_studio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/studio_value"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />
                <!--tomato rating -->
                <ImageView
                    android:id="@+id/tomato_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/fresh_tomato"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/tomato_percentage" />
                <TextView
                    android:id="@+id/tomato_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tomato_percentage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <!-- TextView for Original Language -->
                <TextView
                    android:id="@+id/original_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/original_language"
                    android:textColor="@android:color/white" />

                <!-- TextView for Genres -->
                <TextView
                    android:id="@+id/genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/genres"
                    android:textColor="@android:color/white" />
                <!-- TextView for Popularity -->
                <TextView
                    android:id="@+id/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/popularity"
                    android:textColor="@android:color/white" />
                <!-- TextView for Vote Count -->
                <TextView
                    android:id="@+id/vote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/vote_count"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
        <!-- Movie Overview Overlay -->
        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/semi_transparent_black"
            android:padding="12dp"
            android:text="@string/movie_overview"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@id/movie_poster"
            app:layout_constraintEnd_toEndOf="@id/movie_poster"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/movie_poster" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>